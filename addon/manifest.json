{
    "manifest_version": 2,
    "name": "iHRISWikiMenu",
    "version": "0.1",

    "description": "Adds a category based menu for the iHRIS wiki at https://wiki.ihris.org/wiki",

    "icons": {
        "48": "icons/logo-48.png",
        "96": "icons/logo-96.png"
    },

    "permissions": [
        "activeTab",
        "tabs"
    ],

    "background": {
        "scripts": [
            "browser-polyfill.js",
            "/menu/index.js"
        ]
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],

        "js": [
            "browser-polyfill.js",
            "/content_scripts/ihriswikimenu.js"
        ]
    }],

    "browser_action":{
        "default_icon": "icons/logo-32.png",
        "default_title": "iHRIS Wiki Meu",
        "default_popup": "menu/index.html"
    }
}